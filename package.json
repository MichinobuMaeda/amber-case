{
  "name": "amber-case",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev:setup": "curl http://localhost:5001/amber-case/asia-northeast1/api/setup",
    "start": "yarn build:functions && firebase emulators:exec --only auth,functions,firestore,storage --ui 'yarn dev:setup && react-scripts start'",
    "build": "react-scripts build",
    "build:functions": "cd functions && tsc --types node && cd ../..",
    "deploy": "firebase deploy",
    "lint": "eslint src functions/src",
    "functions:config:set": "firebase functions:config:set",
    "test:functions": "cd functions && jest src --coverage",
    "test:ui": "react-scripts test --coverage --watchAll=false",
    "test": "yarn test:functions && yarn test:ui && istanbul-merge --out coverage-final.json coverage/coverage-final.json functions/coverage/coverage-final.json",
    "emulate": "yarn build:functions && yarn build && firebase emulators:start && yarn dev:setup"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@material-ui/core": "^4.12.3",
    "@mui/icons-material": "^5.2.4",
    "@mui/lab": "^5.0.0-alpha.60",
    "@mui/material": "^5.2.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "firebase": "^9.6.1",
    "i18next": "^21.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.1",
    "react-markdown": "^7.1.1",
    "react-router-dom": "^6.1.1",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.4",
    "web-vitals": "^0.2.4",
    "workbox-background-sync": "^5.1.3",
    "workbox-broadcast-update": "^5.1.3",
    "workbox-cacheable-response": "^5.1.3",
    "workbox-core": "^5.1.3",
    "workbox-expiration": "^5.1.3",
    "workbox-google-analytics": "^5.1.3",
    "workbox-navigation-preload": "^5.1.3",
    "workbox-precaching": "^5.1.3",
    "workbox-range-requests": "^5.1.3",
    "workbox-routing": "^5.1.3",
    "workbox-strategies": "^5.1.3",
    "workbox-streams": "^5.1.3"
  },
  "devDependencies": {
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.16.0",
    "firebase-functions-test": "^0.3.3",
    "firebase-tools": "^9.23.1",
    "istanbul-merge": "^1.1.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "airbnb"
    ],
    "rules": {
      "react/function-component-definition": "off",
      "import/no-extraneous-dependencies": "off"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "react-app",
          "react-app/jest",
          "airbnb-typescript"
        ],
        "plugins": [
          "@typescript-eslint"
        ],
        "parserOptions": {
          "project": "tsconfig.json"
        },
        "rules": {
          "react/function-component-definition": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "index.[jt]s",
      "index.[jt]sx",
      "setupTests.[jt]s",
      "reportWebVitals.[jt]s",
      "service-worker.js",
      "serviceWorkerRegistration.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
